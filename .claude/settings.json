{
  "attribution": {},
  "permissions": {
    "allow": [
      "Bash(* add)",
      "Bash(* install)",
      "Bash(cat *)",
      "Bash(docker *)",
      "Bash(echo *)",
      "Bash(fd *)",
      "Bash(find *)",
      "Bash(gh *)",
      "Bash(git *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(ls *)",
      "Bash(npx *)",
      "Bash(tail *)",
      "Bash(tee *)",
      "Bash(tree *)",
      "Bash(tsx *)",
      "Bash(uvx *)",
      "Bash(wc *)",
      "Bash(xargs *)"
    ],
    "deny": [
      "Bash(python *)",
      "Bash(python)",
      "Bash(python3 *)",
      "Bash(python3)",
      "Bash(*| python *)",
      "Bash(*| python3 *)",
      "Bash(*/python *)",
      "Bash(*/python3 *)"
    ]
  },
  "enabledPlugins": {
    "github@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -qiE '\\bpython[0-9]*\\b'; then echo 'BLOCKED: Use uvx instead of calling python directly. See CLAUDE.md instructions.'; exit 2; fi"
          }
        ]
      }
    ]
  }
}
